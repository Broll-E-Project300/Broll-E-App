<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.QRScanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/OrangeBrand</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <item name="android:windowTranslucentStatus">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="SplashScreen" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="android:windowBackground"> @drawable/backgroudteste</item>
        <item name="statusBarBackground" tools:targetApi="l">?attr/colorPrimary</item>
    </style>

    <style name="Theme.AppCompat.NoActionBar">
        <!--Makes the map appear under the status bar and make status bar transparent-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:statusBarColor">@android:color/white</item>
    </style>

    <style name="DockbottomAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_in_dockbottom</item>
        <item name="android:windowExitAnimation">@anim/slide_out_dockbottom</item>
    </style>
    <style name="menu_text_style" parent="@android:style/TextAppearance.DeviceDefault.Widget.ActionBar.Menu">
        <item name="android:textSize">18dp</item>

        <item name="android:textAllCaps">false</item>
    </style>

</resources>