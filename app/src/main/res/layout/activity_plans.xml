<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".Plans">

    <ImageButton
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:id="@+id/plan_backbutton"
        android:layout_marginTop="50dp"
        android:layout_marginStart="10dp"
        android:src="@drawable/ic_back2"
        android:background="@drawable/docksheet_back_btn"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <ImageView
        android:id="@+id/umbImage"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:src="@mipmap/ic_plan_umb_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plan_backbutton" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/plantext"
        android:textColor="@color/OrangeBrand"
        app:layout_constraintTop_toBottomOf="@id/umbImage"
        android:layout_marginTop="20dp"
        android:text="Our Pricing"
        android:textAlignment="center"
        android:fontFamily="@font/baloo_bhai"
        android:textSize="25dp"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="40dp"
        android:layout_marginTop="15dp"
        android:orientation="vertical"
        android:layout_marginEnd="40dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/plantext">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/GreyBrand"
            android:background="@drawable/radio_selector"
            android:id="@+id/plan_4hr_radio"
            android:drawablePadding="10dp"
            android:text="€0.70/4 hours"
            android:textAlignment="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="20dp"
            />
        <TextView
            android:textColor="@color/GreyBrand"
            android:background="@drawable/radio_selector"
            android:id="@+id/plan_12hr_radio"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="€2.00/12 hours"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="20dp"
            android:textAlignment="center"
            />
        <TextView
            android:textAlignment="center"
            android:textColor="@drawable/custom_radio_text"
            android:background="@drawable/radio_selector"
            android:id="@+id/plan_24hr_radio"
            android:layout_marginTop="25dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="€4.30/24 hours"
            android:textStyle="bold"
            android:textSize="20dp"
            android:padding="20dp"/>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>