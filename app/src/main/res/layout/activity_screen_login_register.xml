<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Screen_LoginRegister">

    <ImageView
        android:id="@+id/screen_logo"
        android:layout_width="197dp"
        android:layout_height="111dp"
        android:layout_marginBottom="110dp"
        android:src="@mipmap/ic_logo_foreground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/open_loginBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/baloo_bhai"
        android:text="Login"
        android:background="@drawable/openlogin_btn"
        android:elevation="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginStart="30sp"
        android:layout_marginEnd="30sp"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/screen_logo" />

    <Button
        android:id="@+id/open_registerBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30sp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="30sp"
        android:fontFamily="@font/baloo_bhai"
        android:text="Sign Up"
        style="@style/Widget.MaterialComponents.Button.OutlinedButton.regbutton"
        android:textColor="@color/GreyBrand"
        android:textAllCaps="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/open_loginBtn" />

</androidx.constraintlayout.widget.ConstraintLayout>